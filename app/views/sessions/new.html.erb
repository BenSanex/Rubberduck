<header>
  <div class="header-content" id="header-container">
    <div class="col-md-6" id="login-container">
      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <h3 class="panel-title">Login</h3>
        </div>
          
        <div class="panel-body">
          <%= form_for(:session, url: login_path, class: "form-horizontal ng-pristine ng-valid") do |f| %>
          <div class="form-group">
            
            <div class="col-sm-10" id="form-email">
              <%= f.text_field :email, autofocus: true, class: "form-control", id: "email", placeholder: "Enter Email" %>
            </div>
          </div>

          <div class="form-group">
            
            <div class="col-sm-10" id="form-password">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "pwd", placeholder: "Enter Password" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Login", class: "btn btn-info pull-right" %>
              <%= link_to "Cancel", url_for(:back), class: "btn btn-default pull-right" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
