<div class="container form-container">
  <h2>Login</h2>
  <%= form_for(:session, url: sessions_create_path) do |f| %>

  	<div class="form-group">
      <%= f.label :email, class: "control-label col-sm-2" %><br />
      <div class="col-sm-10">
        <%= f.text_field :email, autofocus: true, class: "form-control", id: "email", placeholder: "Enter Email" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label col-sm-2" %><br />
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "pwd", placeholder: "Enter Password" %>
      </div>
    </div>

    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Login", class: "btn btn-default" %>
      </div>
    </div>

    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to "Cancel", url_for(:back), class: "btn btn-default" %>
      </div>
    </div>

  <% end %>
</div>