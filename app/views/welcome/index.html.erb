<div class="container background-image">

  <div class="span">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
      <div class="tagline">Real problems, Real solutions</div>
      <div class="sub-tag">We're creating stronger developers one problem at a time</div>
    </div>
    <div class="col-lg-1"></div>
  </div>

  <div class="span">

    <div class="col-lg-6 left-side">
    <% if @user %>
      <%= link_to student_path(@user.id), class: "login-link" do %>
      <div class="role-square">
        <div class="role-name">Student</div>
        <div class="role-hover">Login</div>
      </div>
      <% end %>
    <% else %>
      <%= link_to login_path, class: "login-link" do %>
      <div class="role-square">
        <div class="role-name">Student</div>
        <div class="role-hover">Login</div>
      </div>
      <% end %>
    <% end %>
      <div class="role-register">
        <p><%= link_to 'Student Registration', signup_path %></p>
      </div>
    </div>

    <div class="col-lg-6 right-side">
    <% if @user %>
      <%= link_to mentor_path(@user.id), class: "login-link" do %>
      <div class="role-square">
        <div class="role-name">Mentor</div>
        <div class="role-hover">Login</div>
      </div>
      <% end %>
    <% else %>
      <%= link_to login_path, class: "login-link" do %>
      <div class="role-square">
        <div class="role-name">Mentor</div>
        <div class="role-hover">Login</div>
      </div>
      <% end %>
    <% end %>
      <div class="role-register">
        <p><%= link_to 'Mentor Registration', signup_path %></p>
      </div>
    </div>

  </div>

</div>
