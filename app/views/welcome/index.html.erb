<div class="background-image">

  <div class="tagline">
    Real problems, Real solutions
    <div class="sub-tag">We're creating stronger developers one problem at a time</div>
  </div>

  <div class="left-side">
    <% if @user %>
      <%= link_to student_path(@user.id) do %>
      <div class="student-square">
        <div class="student-name">Student</div>
        <div class="student-hover">
          <p>Login</p>
        </div>
      </div>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path do %>
      <div class="student-square">
        <div class="student-name">Student</div>
        <div class="student-hover">
          <p>Login</p>
        </div>
      </div>
      <% end %>
    <% end %>
    <div class="student-register">
      <%= link_to 'Student Registration', new_user_registration_path %>
    </div>
  </div>

  <div class="right-side">
    <% if current_user %>
      <%= link_to mentor_path(@user.id) do %>
      <div class="mentor-square">
        <div class="mentor-name">Mentor</div>
          <div class="mentor-hover">
            <p>Login</p> 
          </div>
        </div>
      </div>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path do %>
      <div class="mentor-square">
        <div class="mentor-name">Mentor</div>
          <div class="mentor-hover">
            <p>Login</p> 
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
    <div class="mentor-register">
      <%= link_to 'Mentor Registration', new_user_registration_path %>
    </div>
  </div>
</div>