<header>
  <div class="header-content">
    <div class="header-content-inner">
      <h1 id="main-tagline">Real problems, Real solutions</h1>
      <hr>
      <p id="main-subtag">We're creating stronger developers one problem at a time</p>
      <% if @user %>
        <%= link_to "Students", student_path, class: "btn btn-primary btn-xl page-scroll", id: "main-login" %>
        <%= link_to "Mentors", mentor_path, class: "btn btn-primary btn-xl page-scroll", id: "mentor-login" %>
      <% else %>
        <%= link_to "Students", login_path, class: "btn btn-primary btn-xl page-scroll", id: "main-button", html: {'data-toggle' => "modal", 'data-target' => "#myModal"} %>
        <%= link_to "Mentors", login_path, class: "btn btn-primary btn-xl page-scroll", id: "mentor-button", html: {'data-toggle' => "modal", 'data-target' => "#myModal"} %>
      <% end %>
    </div>
    <div class="header-content-inner">
      <%= link_to 'Register', students_new_path, class: "btn btn-primary btn-xl page-scroll", id: "register-button" %>
      <%= link_to 'Register', mentors_new_path, class: "btn btn-primary btn-xl page-scroll", id: "register-button" %>
    </div>
  </div>
</header>

<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header modal-header-success">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Login</h4>
      </div>
      <div class="modal-body">
        <%= render "sessions/form" %>
      </div>
    </div>

  </div>
</div>