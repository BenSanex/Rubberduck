<div class="container form-container">
  <h2>Sign Up</h2>
  <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>

    <div class="form-group">
      <%= f.label :full_name, class: "control-label col-sm-2" %><br />
      <div class="col-sm-10">
        <%= f.text_field :full_name, autofocus: true, class: "form-control", id: "email", placeholder: "Enter Name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :username, class: "control-label col-sm-2" %><br />
      <div class="col-sm-10">
        <%= f.text_field :username, class: "form-control", id: "email", placeholder: "Enter Username" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "control-label col-sm-2" %><br />
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control", id: "email", placeholder: "Enter Email" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label col-sm-2" %><br />
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "pwd", placeholder: "Enter Password" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :avatar_url, class: "control-label col-sm-2" %><br />
      <div class="col-sm-10">
        <%= f.text_field :avatar, autocomplete: "off", class: "form-control", id: "email", placeholder: "Enter Picture" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :Mentor?, class: "control-label col-sm-2" %><br />
      <div class="col-sm-10">
        <%= f.check_box :is_mentor %>
      </div>
    </div>

    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Sign Up", class: "btn btn-default" %>
      </div>
    </div>

    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to "Cancel", url_for(:back), class: "btn btn-default" %>
      </div>
    </div>

  <% end %>
</div>