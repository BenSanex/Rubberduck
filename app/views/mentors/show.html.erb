<header id="mentor-background">
  <div class="header-content">
    <div class="header-content-inner">
      <div class="row">
        <div class="col-lg-12">
          <div class="thediv">
            <img class="mentor-borders" src="/assets/border_background.png">
            <img id="mentor-portrait" src="<%= @user.avatar %>" alt="">
          </div>

          <div class="intro-text">
            <span class="skills"><%= render partial: "shared/badges", locals: {badges: @badges, user: @user} %></span>
            <span class="name"><%= @user.username %></span>
            <span class="skills">Level: <%= @user.level %></span>
            <span class="skills"><%= render partial: "shared/star_rating", locals: {user: @user} %></span>
            <!-- <%= render @user.skills %> -->
            <a type="button" class="btn btn-primary btn-lg" id="listen" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Searching" data-toggle="tooltip" data-placement="bottom" title="Set Your Status to Available!">Ready for Action</a>
            <a href='#' type='button' class="btn btn-primary btn-lg" id='skill-adder'>Add New Skill</a>
            <span class="skills"><%= render partial: "shared/expertise_form", locals: {expertise: @expertise} %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
