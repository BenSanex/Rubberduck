<header id="mentor-background">
  <div class="header-content">
    <div class="header-content-inner">
      <div class="row">
        <div class="col-lg-12">
          <img id="mentor-portrait" src="<%= @user.avatar %>" alt="">
          <div class="intro-text">
            <span class="name"><%= @user.username %></span>
            <span class="skills">Level: <%= @user.level %></span>
            <span class="skills"><%= render partial: "shared/star_rating", locals: {user: @user} %></span>
            <span class="skills"><%= render partial: "shared/badges", locals: {badges: @badges} %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
